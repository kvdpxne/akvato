---
import FormattedDate from "./FormattedDate.astro";
const {content} = Astro.props;
---

<a class="flex items-center justify-between
          rounded-lg p-2
          group
          hover:bg-neutral-200 hover:dark:bg-neutral-700"
	 href={content.reference}
	 target={content.reference?.startsWith("mailto:") ? "_self" : "_blank"}>

	<div class="flex items-center
              text-neutral-700 dark:text-neutral-200">
		<div class="rounded-full mr-2 p-2
                bg-neutral-200 dark:bg-neutral-700
                group-hover:bg-neutral-300 dark:group-hover:bg-neutral-600">
			<img class="h-8 w-8"
					 src={`/_icons/${content.icon}.svg`}
					 alt={content.name}>
		</div>
		<span class="text-sm font-medium">
      {content.name}
    </span>
	</div>

	<span class="text-sm text-neutral-600 dark:text-neutral-400">
    <FormattedDate value={content.value}/>
  </span>
</a>