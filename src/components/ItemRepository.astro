---
import Container from "./Container.astro";

const {name, description, language, color} = Astro.props;
---

<Container>
	<a class="flex hover:bg-neutral-700 rounded-2xl"
		 href={`https://github.com/${name}`}
		 target="_blank">

		<div class="flex flex-col p-5">
			<h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        {name}
			</h2>
			<span class="text-gray-500 dark:text-gray-400 mt-1">
        <span style={`background-color: ${color};`} class="inline-block rounded-full w-3 h-3"/>
        {language}
      </span>
			<p class="text-gray-700 dark:text-gray-300 mt-2">
        {description}
			</p>
		</div>
	</a>
</Container>