---
import SideContainerItem from "./SideContainerItem.astro";
const {
  title,
  items
} = Astro.props;
---

<div class="border border-neutral-700/40 rounded-2xl">
  <div class="p-5">
    <h2 class="font-bold">
      {title}
    </h2>
    <div class="mt-6 space-y-2">
      {items.sort((a, b) => b.value - a.value).map(it =>
        <SideContainerItem content={it}/>)}
    </div>
  </div>
</div>